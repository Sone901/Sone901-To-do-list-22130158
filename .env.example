# MongoDB Connection
mongoDbUrl=mongodb+srv://your_username:your_password@cluster.mongodb.net/todolistDb

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Google OAuth Credentials (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Server Configuration
PORT=4000
NODE_ENV=development

# Note: OAuth callback URL is automatically handled by the app
# Local: http://localhost:4000/auth/google/callback
# Production: https://your-domain.com/auth/google/callback
